            style="background: rgba(24, 29, 56, 0.7)"
          >
            <div class="container">
              <div class="row justify-content-start">
                <div class="col-sm-10 col-lg-8">
                  <h1 class="display-3 text-white animated slideInDown">
                    Dituria është pasaporta për sukses
                  </h1>
                  <i class="fs-5 text-white mb-4 pb-2"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Carousel End -->

    <!-- Service Start -->
    <div class="container-xxl py-5">
      <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
          <h6 class="section-title bg-white text-center text-primary px-3">
            Lëndët
          </h6>
          <h1 class="mb-5">Çfarë mësojnë fëmijët</h1>
        </div>
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
          <h6 class="section-title bg-white text-center text-primary px-3 mb-4">
            Të gjitha
          </h6>
        </div>
          <div class="row g-4">
          <%for(let i =0;i<subject.length;i++){%>
            <% if (subject[i].subjectCycle === "Të gjithët") { %>
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
              <div class="service-item text-center pt-3">
                <div class="p-4">
                  <img src="/uploads/<%= subject[i].subjectIcon %>">
                  <h5 class="mb-3">Lënda: <%=subject[i].subjectName%></h5>
                  <p class="text-primary">Ciklet: <%=subject[i].subjectCycle%></p>
                  <p class="text-primary">Klasat: <%= subject[i].subjectClass %></p>
                </div>
              </div>
            </div>
            <%}%>
            <%}%>
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">

          <h6
            class="section-title bg-white text-center text-primary mt-5 px-3 mb-4"
          >
            Cikli i lartë
          </h6>
        </div>
        <div class="row g-4">
          <% for(let i = 0; i < subject.length; i++) { %>
            <% if (subject[i].subjectCycle === "I lartë") { %>
              <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item text-center pt-3">
                  <div class="p-4">
                    <img src="/uploads/<%= subject[i].subjectIcon %>">
                    <h5 class="mb-3">Lënda: <%= subject[i].subjectName %></h5>
                    <p class="text-primary">Ciklet: <%= subject[i].subjectCycle %></p>
                    <p class="text-primary">Klasat: <%= subject[i].subjectClass %></p>
                  </div>
                </div>
              </div>
            <% } %>
          <% } %>
        </div>

        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">

          <h6
            class="section-title bg-white text-center text-primary mt-5 px-3 mb-4"
          >
            Cikli i ulët
          </h6>
        </div>
        <div class="row g-4">
          <% for(let i = 0; i < subject.length; i++) { %>
            <% if (subject[i].subjectCycle === "I ulët") { %>
              <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item text-center pt-3">
                  <div class="p-4">
                    <img src="/uploads/<%= subject[i].subjectIcon %>">
                    <h5 class="mb-3">Lënda: <%= subject[i].subjectName %></h5>
                    <p class="text-primary">Ciklet: <%= subject[i].subjectCycle %></p>
                    <p class="text-primary">Klasat: <%= subject[i].subjectClass %></p>
                  </div>
                </div>
              </div>
            <% } %>
          <% } %>
        </div>
        
      </div>

    </div>
    <!-- Service End -->

    <!-- About Start -->
    <div class="container-xxl py-5">
      <div class="container">
        <div class="row g-5">
          <div
            class="col-lg-6 wow fadeInUp"
            data-wow-delay="0.1s"
            style="min-height: 400px"
          >
            <div class="position-relative h-100">
              <img
                class="img-fluid position-absolute w-100 h-100"
                src="/css/public-img/about.jpg"
                alt=""
                style="object-fit: cover"
              />
            </div>
          </div>
          <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
            <h6 class="section-title bg-white text-start text-primary pe-3">
              Pse ne
            </h6>
            <h1 class="mb-4">Pse të n'a zgjidhni neve?</h1>
            <p class="mb-4">
              Zgjidhni shkollën tonë për një udhëtim të pasur të mësimit,
              angazhimin tonë ndaj cilësisë së lartë dhe mbështetjen e një
              ambienti miqësor dhe përkrahës. Shkolla jonë sjell përvojë të
              pasur akademike, zhvillim personal dhe përkushtim të pandërprerë
              ndaj suksesit të nxënësve.
            </p>
            <div class="row gy-2 gx-4 mb-4">
              <div class="col-sm-6">
                <p class="mb-0">
                  <i class="fa fa-arrow-right text-primary me-2"></i>Kujdesi për
                  nxënësit
                </p>
              </div>
              <div class="col-sm-6">
                <p class="mb-0">
                  <i class="fa fa-arrow-right text-primary me-2"></i>Program i
                  pasur
                </p>
              </div>
              <div class="col-sm-6">
                <p class="mb-0">
                  <i class="fa fa-arrow-right text-primary me-2"></i
                  >Bashkëpunimi prindëror
                </p>
              </div>
              <div class="col-sm-6">
                <p class="mb-0">
                  <i class="fa fa-arrow-right text-primary me-2"></i>Përparimi
                  akademik
                </p>
              </div>
              <div class="col-sm-6">
                <p class="mb-0">
                  <i class="fa fa-arrow-right text-primary me-2"></i>Inovacioni
                  dhe kreativiteti
                </p>
              </div>
              <div class="col-sm-6">
                <p class="mb-0">
                  <i class="fa fa-arrow-right text-primary me-2"></i>Kujdesi për
                  mirëqenien
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- About End -->

   

    <!-- Testimonial Start -->
    <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
