  <script src="/js/staffList.js"></script>
  <script src="/css/admin-lib/jquery/dist/jquery.min.js"></script>
  <script src="/css/admin-lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/css/admin-js/sidebarmenu.js"></script>
  <script src="/css/admin-js/app.min.js"></script>
  <script src="/css/admin-lib/simplebar/dist/simplebar.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <script>

    const staffRoleSelect = document.getElementById('staff-role');
    const staffSubjectSelect = document.getElementById('staff-subject');
    const subjectPlaceholder = document.getElementById('subject-placeholder');

    function toggleSubjectSelect() {
      const selectedRole = staffRoleSelect.value;
      if (selectedRole === 'Arsimtar/e') {
        staffSubjectSelect.style.display = 'block';
        subjectPlaceholder.style.display =  'block';
      } else { 
        staffSubjectSelect.style.display = 'none';
        subjectPlaceholder.style.display =  'none';
      }
    }

    toggleSubjectSelect();

    staffRoleSelect.addEventListener('change', toggleSubjectSelect);

  </script>
  <script>
    const staffForm = document.getElementById('staffForm');

    staffForm.addEventListener('submit', async(e)=> {
    e.preventDefault();
    const formData = new FormData()
    const staffName = document.getElementById('staff-name').value;
    const staffPhoto = document.getElementById('staff-photo').files[0];
    const staffCV = document.getElementById('staff-cv').files[0];
    const staffRole = document.getElementById('staff-role').value;
    const staffSubject = document.getElementById('staff-subject').value;
    formData.append('staffName', staffName)
    formData.append('staffRole', staffRole)
    formData.append('staffSubject', staffSubject)
    
    if (staffPhoto) {
      formData.append('photoFile', staffPhoto);
    }
    if (staffCV) {
      formData.append('cvFile', staffCV);
    }

    const res = await fetch('/staff/register-staff', {
      method: 'POST', 
      body: formData,
    });
    const data = await res.json();

    if (data.status === 'success') {
          Swal.fire({
            icon: 'success',
            title: 'Punonjësi u shtua!',
            text: 'Sukses!',
            timer: 1500,
            showConfirmButton: false,
          }).then(() => {
            location.assign('/admin-staff');
          });
        }
  }); 
  </script>
