    <!--  Main wrapper -->
    <div class="body-wrapper">

      <div class="container-fluid">
        <h2 style="font-size: 36px; margin-bottom: 50px">
          Faqja për menaxhimin e <b><u style="color: #5d87ff">Profesioneve</u></b> !
        </h2>

        <h3 style="margin-bottom: 40px">
          Në këtë faqe bëhet <span style="color: #5d87ff">shtimi</span>, paraqitja dhe <span style="color: #e72d18">fshirja</span> e profesioneve të punëtorve të shkollës!
        </h3> 

        <div class="d-flex justify-content-center">
          <div class="container-fluid">

            <form action="/role/register-role" id="roleForm" method="post">
              <div class="mb-3">
                <label for="roleName" class="form-label">Profesioni</label>
                <input type="text" class="form-control" id="roleName" aria-describedby="roleNameHelp" placeholder="Shembull: Psikolog/e">
              </div>
              <button type="submit" class="btn btn-primary">Shto</button>
            </form>
                                          
            <table class="table">
              <thead>
                <tr>
                  <th>Nr.</th>
                  <th>Emri i Profesionit</th>
                  <th>Opsione</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
        <!--  Header Start -->

        <!--  Header End -->

      </div>
    </div>
    <script src="/js/addRoleList.js"></script>
    <script src="/css/admin-lib/jquery/dist/jquery.min.js"></script>
    <script src="/css/admin-lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/css/admin-js/sidebarmenu.js"></script>
    <script src="/css/admin-js/app.min.js"></script>
    <script src="/css/admin-lib/simplebar/dist/simplebar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
      const roleForm = document.getElementById('roleForm');

      roleForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const roleName = document.getElementById('roleName').value;

        const res = await fetch('/role/register-role', {
          method: 'POST',
          body: JSON.stringify({
            id: e.target.id,
            roleName: roleName,
          }),
          headers: {
            'Content-Type': 'application/json',
          },
        });

        const data = await res.json();

        if (data.status === 'success') {
          if (typeof Swal !== 'undefined') {
            Swal.fire({
              icon: 'success',
              title: 'Profesioni u shtua!',
              text: 'Sukses!',
              timer: 1500,
              showConfirmButton: false,
            }).then(() => {
              location.reload(); 
            });
          } else {
            location.reload(); 
          }
        }

      });
    </script>
  </body>
