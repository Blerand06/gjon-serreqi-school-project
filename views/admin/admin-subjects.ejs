    <div class="body-wrapper">

      <div class="container-fluid">
        <a href="/"><h2 style="font-size: 36px; margin-bottom: 50px">
          Faqja për menaxhimin e
          <b><u style="color: #5d87ff">Lëndëve</u></b> !
        </h2></a>   
        <form action="/subjects/register-subjects" id="subjectsForm" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Emri i Lëndës</label>
            <input type="text" class="form-control" id="Subject-Name" aria-describedby="emailHelp">
          </div>

          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Ikona</label>
            <input type="file" class="form-control" id="Icon" aria-describedby="emailHelp" name="iconImage" accept="image/*">
          </div>

          <div class="d-flex">
            <label class="me-1 mt-1" for="ciklet">Cikli:</label>
            <select required name="Cycle" id="Cycle" style="border: none; padding: 5px;">
              <option value="I ulët" selected>I ulët</option>
              <option value="I lartë">I lartë</option>
              <option value="Të gjithët">Të gjithët</option>
            </select>
            <label class="ms-4 me-1 mt-1" for="ciklet">Klasët</label>
            <select required name="Class" id="Class" style="border: none; padding: 5px;">
              <option value="I-IX" selected>I - IX</option>
              <option value="II-IX">II - IX</option>
              <option value="VI-IX">VI - IX</option>
              <option value="I-V">I - V</option>
              <option value="VII-IX">VII - IX</option>
            </select>
          </div>
          <div class=" form-check">
          </div>
          <button type="submit" class="btn btn-primary mb-5">Ruaj</button>
        </form>
        <table class="table">
          <thead>
            <tr>
              <th>Nr.</th>
              <th>Emri Lëndës</th>
              <th>Ikona</th>
              <th>Cikli</th>
              <th>Klasët</th>
              <th>Opsione</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <script src="/js/subjectsList.js"></script>
  <script src="/css/admin-lib/jquery/dist/jquery.min.js"></script>
  <script src="/css/admin-lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/css/admin-js/sidebarmenu.js"></script>
  <script src="/css/admin-js/app.min.js"></script>
  <script src="/css/admin-lib/simplebar/dist/simplebar.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <script>
    const subjectsForm = document.getElementById('subjectsForm');

    subjectsForm.addEventListener('submit', async(e)=> {
    e.preventDefault();
    const formData = new FormData()
    const subjectName = document.getElementById('Subject-Name').value;
    const subjectIcon = document.getElementById('Icon').files[0];
    const subjectCycle = document.getElementById('Cycle').value;
    const subjectClass = document.getElementById('Class').value;  
    formData.append('subjectName',subjectName)
    formData.append('subjectCycle',subjectCycle)
    formData.append('subjectClass',subjectClass)
      if(subjectIcon){
        formData.append('iconImage',subjectIcon)
      }
    const res = await fetch('/subjects/register-subjects', {
      method: 'POST', 
      body: formData
    });
    const data = await res.json();

    if (data.status === 'success') {
          Swal.fire({
            icon: 'success',
            title: 'Lënda u shtua!',
            text: 'Sukses!',
            timer: 2000,
            showConfirmButton: false,
          }).then(() => {
            location.assign('/admin-subjects');
          });
        }
  }); 
  </script>
