      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>

  <body>
    <!--  Body Wrapper -->
    <div
      class="page-wrapper"
      id="main-wrapper"
      data-layout="vertical"
      data-navbarbg="skin6"
      data-sidebartype="full"
      data-sidebar-position="fixed"
      data-header-position="fixed"
    >
      <!-- Sidebar Start -->
      <aside class="left-sidebar">
        <!-- Sidebar scroll-->
        <div>
          <div
            class="brand-logo d-flex align-items-center justify-content-between"
          >
            <a class="text-nowrap logo-img">
              <img
                src="/css/admin-img/logos/logo-skolla.png"
                height="190px"
                width="190px"
                alt=""
              />
            </a>
            <div
              class="close-btn d-xl-none d-block sidebartoggler cursor-pointer"
              id="sidebarCollapse"
            >
              <i class="ti ti-x fs-8"></i>
            </div>
          </div>
          <!-- Sidebar navigation-->
          <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
            <ul id="sidebarnav">
              <li class="nav-small-cap">
                <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
              </li>
              <li class="sidebar-item">
                <a
                  class="sidebar-link"
                  href="/admin-add-role"
                  aria-expanded="false"
                >
                  <span>
                    <i class="fa-solid fa-pencil"></i>
                  </span>
                  <span class="hide-menu">Profesionet</span>
                </a>
              </li>
              <li class="sidebar-item">
                <a
                  class="sidebar-link"
                  href="/admin-subjects"
                  aria-expanded="false"
                >
                  <span>
                    <i class="fa-solid fa-book"></i>
                  </span>
                  <span class="hide-menu">Lëndët</span>
                </a>
              </li>
              <li class="sidebar-item">
                <a
                  class="sidebar-link"
                  href="/admin-staff"
                  aria-expanded="false"
                >
                  <span>
                    <i class="fa-solid fa-user"></i>
                  </span>
                  <span class="hide-menu">Stafi</span>
                </a>
              </li>
              <li class="sidebar-item">
                <a
                  class="sidebar-link"
                  href="/admin-plan"
                  aria-expanded="false"
                >
                  <span>
                    <i class="fa-solid fa-file"></i>
                  </span>
                  <span class="hide-menu">Plani Zhvillimor</span>
                </a>
              </li>
              <li class="sidebar-item">
                <a
                  class="sidebar-link"
                  href="/admin-news"
                  aria-expanded="false"
                >
                  <span>
                    <i class="fa-solid fa-envelope"></i>
                  </span>
                  <span class="hide-menu">Lajmet</span>
                </a>
              </li>
              <li class="sidebar-item">
                <a
                  class="sidebar-link"
                  href="/admin-contact"
                  aria-expanded="false"
                >
                  <span>
                    <i class="fa-solid fa-message"></i>
                  </span>
                  <span class="hide-menu">Mesazhet e Pranuara</span>
                </a>
              </li>
              <li class="sidebar-item">
                <a
                  class="sidebar-link"
                  href="/admin-auth-edit/<%= user._id %>"
                  aria-expanded="false"
                >
                  <span>
                    <i class="fa-solid fa-user-pen"></i>
                  </span>
                  <span class="hide-menu">Përditëso Llogarinë</span>
                </a>
              </li>
              <li class="sidebar-item">
                <a
                  class="sidebar-link"
                  href="/admin-help"
                  aria-expanded="false"
                >
                  <span>
                    <i class="fa-solid fa-question"></i>
                  </span>
                  <span class="hide-menu">Si ta përdorni faqen</span>
                </a>
              </li>
              <li class="sidebar-item mt-5">
                <a
                  class="sidebar-link"
                  href="/auth/logout"
                  aria-expanded="false"
                >
                  <span>
                    <i
                      class="fa-solid fa-arrow-right-from-bracket"
                      style="color: #e72d18"
                    ></i>
                  </span>
                  <span class="hide-menu" style="color: #e72d18">Shkyçuni</span>
                </a>
