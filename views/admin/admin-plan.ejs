  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <script>
    const planForm = document.getElementById('planForm');

    planForm.addEventListener('submit', async(e)=> {
    e.preventDefault();
    const planYear = document.getElementById('planYear').value;
    const planDocument = document.getElementById('planDocument').value;

    const res = await fetch('/plan/register-plan', {
      method: 'POST', 
      body: JSON.stringify({
        planYear,
        planDocument
      }),
      headers: {
        'Content-Type': 'application/json',
      },
    });
    const data = await res.json();

    if (data.status === 'success') {
          Swal.fire({
            icon: 'success',
            title: 'Plani Zhvillimor u shtua!',
            text: 'Sukses!',
            timer: 2000,
            showConfirmButton: false,
          }).then(() => {
            location.assign('/admin-plan');
          });
        }
  }); 
  </script>
